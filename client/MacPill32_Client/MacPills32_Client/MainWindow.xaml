<Window x:Class="MacPills32_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacPills32_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    
    <Border Padding="20">
        <StackPanel>
            <!-- Title -->
            <TextBlock Text="MacPill32 Configuration Client" FontSize="20" FontWeight="Bold" Margin="0 0 0 30" />
            
            <!-- RGB Values -->
            <TextBlock Text="Red:" FontWeight="Bold" />
            <TextBox Name="RedTextBox" Padding="2" Margin="0 0 0 10"></TextBox>
            <TextBlock Text="Green:" FontWeight="Bold" />
            <TextBox Name="GreenTextBox" Padding="2" Margin="0 0 0 10"></TextBox>
            <TextBlock Text="Blue:" FontWeight="Bold" />
            <TextBox Name="BlueTextBox" Padding="2" Margin="0 0 0 10"></TextBox>
            
            <!-- Send Button -->
            <Button x:Name="SendButton" Click="SendButton_OnClick" Content="Send"></Button>
            
        </StackPanel>
    </Border>
</Window>
